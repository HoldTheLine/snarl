
extends layout

block content
  h1 Coding Soundtrack
  h2 Currently playing &ldquo;
    a(href="/songs/#{currentSong.id}") #{currentSong.title}
    | &rdquo; by #{currentSong.author}

  .row-fluid
    .stage.span10
      - for dj in room.djs
        .djCard.span2
          a(href="/djs/#{dj.plugID}") #{dj.name}
  
  .row-fluid
    #history
      h2 Track History
      ol
        - for song in history
          include blocks/song-instance
    